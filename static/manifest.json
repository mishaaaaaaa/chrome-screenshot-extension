{
  "manifest_version": 3,
  "name": "Advanced Screenshot",
  "version": "1.0.0",
  "description": "My first Chrome extension.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "tabs",
    "tabCapture",
    "desktopCapture",
    "offscreen",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  }
}
