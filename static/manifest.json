{
  "manifest_version": 3,
  "name": "Advanced Screenshot",
  "version": "1.0.0",
  "description": "My first Chrome extension.",
  "minimum_chrome_version": "116",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "tabCapture",
    "desktopCapture",
    "offscreen",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  }
}
