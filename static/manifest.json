{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "0.1.0",
  "description": "My first Chrome extension.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "tabs", "tabCapture"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  }
}
